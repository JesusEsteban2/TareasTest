<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.chip.Chip
        android:id="@+id/taskChip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:text="Pending"/>

    <TextView
        android:id="@+id/taskText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="4"
        android:text="Task description                 "
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/taskChip"
        app:layout_constraintStart_toEndOf="@+id/taskChip"
        />
    <ImageView
        android:id="@+id/catImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/taskText"
        app:layout_constraintStart_toEndOf="@+id/taskText"
        android:src="@drawable/work_36"
        />

</androidx.constraintlayout.widget.ConstraintLayout>