<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.chip.Chip
        android:id="@+id/taskChip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Pending"
        app:chipIcon="@drawable/uncheck"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/taskText"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Task description               "
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/taskChip"
        app:layout_constraintStart_toEndOf="@+id/taskChip"
        />

    <ImageView
        android:id="@+id/catImage"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/taskText"
        app:layout_constraintStart_toEndOf="@+id/taskText"
        android:src="@drawable/work_36"
        />

    <ImageView
        android:id="@+id/delImage"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/catImage"
        app:layout_constraintStart_toEndOf="@+id/catImage"
        android:src="@drawable/delete_36"
        />


</androidx.constraintlayout.widget.ConstraintLayout>